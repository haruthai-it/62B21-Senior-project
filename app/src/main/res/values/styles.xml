<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/primary_dark_material_dark</item>
        <item name="colorControlActivated">@color/primary_dark_material_dark</item>
        <item name="colorControlHighlight">@color/greyWhite</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:searchViewStyle">@style/MySearchViewStyle</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Search button icon -->
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/greyWhite</item>
        <item name="hintTextColor">@color/greyWhite</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="errorTextColor">@color/red</item>
    </style>

    <style name="TextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/dullGrey</item>
        <item name="hintTextColor">@color/dullGrey</item>
        <item name="colorControlActivated">@color/dullGrey</item>
        <item name="boxStrokeColor">@color/greyWhite</item>
        <item name="errorTextColor">@color/red</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="TextAppearance.Light" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Dark" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DatePicker.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="DatePicker.Dark" parent="Theme.AppCompat.Dialog">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/greyWhite</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="DialogButtonTheme">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="closeIcon">@drawable/round_close_black_24</item>
    </style>

    <style name="IconTintGrey">
        <item name="tint">@color/dullGrey</item>
        <item name="iconTint">@color/dullGrey</item>
    </style>

    <style name="ImageViewNoTint">
        <item name="tint">@null</item>
    </style>

    <style name="AlertDialogStyle.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AlertDialogStyle.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


</resources>
